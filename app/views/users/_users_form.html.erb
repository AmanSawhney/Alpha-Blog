<%= render 'shared/errors', obj: @user%>
<div class ='row' >
	<div class = 'col-xs-12'>
		<%= form_for(@user, :html => {class: "form-horizontal"}) do |f| %>
		<div class = "form-group">
			<div class = "control-label col-sm-2">
				<%= f.label :username %>
			</div>
			<div class = "col-sm-8">
				<%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
			</div>
		</div>
		<div class = "form-group">
			<div class = "control-label col-sm-2">
				<%= f.label :email %> <br/>
			</div>
			<div class= "col-sm-8">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
			</div>
		</div>
		<div class = "form-group">
			<div class = "control-label col-sm-2">
				<%= f.label :password %> <br/>
			</div>
			<div class= "col-sm-8">
				<%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
			</div>
		</div>
		<div class="form-group">
			<div class ="col-sm-10 col-sm-offset-2">
				<%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: 'btn btn-primary btn-lg') %>


				<% end %>
				<%= link_to "Cancel Action", articles_path, class: "btn-lg btn btn-danger"%>

			</div>
		</div>
	</div>
